<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/loginbg"
    tools:context="deaddevs.com.studentcompanion.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/backgroundtitle">
                <TextView
                    android:id="@+id/Title"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Student\nCompanion"
                    android:textAlignment="center"
                    android:textColor="#D0E1F9"
                    android:textSize="60sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/UserText"
                android:text="Username:"
                android:textAlignment="center"
                android:textColor="#D0E1F9"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:id="@+id/userInfo"
                android:textAlignment="center"
                android:background="@drawable/editbackground"
                android:fontFamily="orbitron"
                android:textColor="#D0E1F9" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/PassText"
                android:text="Password:"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:textColor="#D0E1F9"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginRight="3dp"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/passInfo"
                android:layout_marginRight="20dp"
                android:fontFamily="orbitron"
                android:textColor="#D0E1F9"
                android:textAlignment="center"
                android:background="@drawable/editbackground"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        <Button
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:fontFamily="orbitron"
            android:text="Login"
            android:onClick="handleSign"
            android:textColor="#D0E1F9"
            android:background="#001"/>

        <Button
            android:layout_width="200sp"
            android:layout_marginTop="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="orbitron"
            android:text="Sign-Up"
            android:textColor="#D0E1F9"
            android:onClick="signUp"
            android:background="#001"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TradeMark"
            android:text="Android-Chan"
            android:textAlignment="center"
            android:textColor="#D0E1F9"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>
