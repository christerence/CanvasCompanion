<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    android:orientation="vertical"
    tools:context="deaddevs.com.studentcompanion.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:background="@drawable/backgroundtitle">


                <TextView
                    android:id="@+id/Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="orbitron"
                    android:padding="10dp"
                    android:text="Student\nCompanion"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="40sp" />

            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/UserText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="orbitron"
                android:text="Username:"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/userInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/editbackground"
                android:fontFamily="orbitron"
                android:textSize="20sp"
                android:lines="1"
                android:maxLines="1"
                android:textColor="#000"
                android:inputType="text"
                android:textCursorDrawable="@drawable/color_cursor"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/PassText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="3dp"
                android:fontFamily="orbitron"
                android:text="Password:"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/passInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@drawable/editbackground"
                android:fontFamily="orbitron"
                android:lines="1"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#000"
                android:textCursorDrawable="@drawable/color_cursor"/>

        </LinearLayout>

        <Button
            android:layout_width="342dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="#00acc1"
            android:fontFamily="orbitron"
            android:onClick="handleSign"
            android:text="Login"
            android:textColor="#fff"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="orbitron"
                android:text="Don't have an account?"
                android:textColor="#637786"
                android:textSize="14dp" />

            <Button
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:background="@drawable/loginbg"
                android:fontFamily="orbitron"
                android:onClick="signUp"
                android:text="Sign Up"
                android:textColor="#637786"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginBottom="13dp"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Android-Chan "
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/TradeMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/trademark"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="10sp"
            android:textStyle="bold" />


    </LinearLayout>



</RelativeLayout>
